{
  "name": "lit",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "npm run generate-parser && tsc && vite build",
    "generate-parser": "lezer-generator src/lezer-language/loop.grammar -o src/lezer-language/parser.js",
    "serve": "vite preview",
    "test:prebuild": "tsc src/test-utils/injectNodeEnvTransformer.ts",
